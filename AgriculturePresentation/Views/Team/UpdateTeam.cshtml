@model EntityLayer.Concrete.Team
@{
    ViewData["Title"] = "UpdateTeam";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
  <div class="card">
    <div class="card-body">
      <h4 class="card-title">Personel Güncelleme</h4>
      <form class="forms-sample" method="post">
        <div class="form-group">
          @Html.HiddenFor(x=>x.TeamID)
          <label for="exampleInputName1">Adı Soyadı</label>
          <input type="text" class="form-control" placeholder="Ad Soyad" asp-for="PersonName">
          <span asp-validation-for="PersonName" class="text-danger"></span>
        </div>

        <div class="form-group">
          <label for="exampleInputEmail3">Görev</label>
          <input type="text" class="form-control" placeholder="Görev" asp-for="Title">
          <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="form-group">
          <label for="exampleInputEmail3">Görsel Yolu</label>
          <input type="text" class="form-control" placeholder="Görselyolu" asp-for="ImageUrl">
          <span asp-validation-for="ImageUrl" class="text-danger"></span>
        </div>

        <div class="form-group">
          <label for="exampleInputEmail3">Facebook</label>
          <input type="text" class="form-control" placeholder="Facebook linkini giriniz." asp-for="FacebookUrl">
        </div>

        <div class="form-group">
          <label for="exampleInputEmail3">İnstagram</label>
          <input type="text" class="form-control" placeholder="İnstagram linkini giriniz." asp-for="InstagramUrl">
        </div>

        <div class="form-group">
          <label for="exampleInputEmail3">Twitter</label>
          <input type="text" class="form-control" placeholder="Twitter linkini giriniz." asp-for="TwitterUrl">
        </div>

        <div class="form-group">
          <label for="exampleInputEmail3">Web Sitesi</label>
          <input type="text" class="form-control" placeholder="Website linkini giriniz." asp-for="WebsiteUrl">
        </div>
        <button type="submit" class="btn btn-primary me-2">Kaydet</button>
      </form>
    </div>
  </div>
</div>


