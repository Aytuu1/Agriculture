@* Services KISMI  *@
@using EntityLayer.Concrete
@model List<Service>
<div class="sevices-w3layouts" id="services">
	<div class="container">
		<h3 class="tittle">Hizmetlerimiz</h3>
		<p class="heading-btm-w3ls">
			Taze ve doğal organik ürünler sunuyor, tarım danışmanlığı ve eğitim hizmetleri sağlıyoruz. Ayrıca, özel sipariş ve paketleme seçenekleriyle hizmetinizdeyiz.
		</p>
		<div class="services-main">
			@foreach (var item in Model)
			{
				
		
			<div class="@item.MainClass" data-wow-delay=".5s">
				<h5>@item.Title</h5>
				<p>@item.Description</p>

				<div class="@item.SubClass">
					<i class="@item.Image" aria-hidden="true"></i>
					<p>@item.Title</p>
				</div>
			</div>
			}
		</div>
		<div class="clearfix"> </div>
	</div>
</div>