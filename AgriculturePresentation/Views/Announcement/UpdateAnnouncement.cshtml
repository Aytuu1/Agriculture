@model EntityLayer.Concrete.Announcement
@{
    ViewData["Title"] = "UpdateAnnouncement";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
  <div class="card">
    <div class="card-body">
      <h4 class="card-title">Duyuru Düzenleme Sayfası</h4>
      <form class="forms-sample" method="post">
        @Html.HiddenFor(x => x.AnnouncementID)
        <div class="form-group">
          <label for="exampleInputName1">Başlık</label>
          <input type="text" class="form-control"  placeholder="Başlık giriniz." asp-for="Title">
        </div>
        <div class="form-group">
          <label for="exampleInputEmail3">Tarih</label>
          <input type="date" class="form-control"  placeholder="Tarih Giriniz." asp-for="Date">
        </div>

        <div class="form-group">
          <label for="exampleTextarea1">Açıklama</label>
          <textarea class="form-control" cols="30" rows="5" asp-for="Description" placeholder="Açıklama giriniz."></textarea>
        </div>
        <button type="submit" class="btn btn-primary me-2">Kaydet</button>
      </form>
    </div>
  </div>
</div>
