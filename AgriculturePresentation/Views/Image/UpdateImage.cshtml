@model EntityLayer.Concrete.Image
@{
    ViewData["Title"] = "UpdateImage";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<div class="col-12 grid-margin stretch-card">
  <div class="card">
    <div class="card-body">
      <h4 class="card-title">Görsel Güncelleme Sayfası</h4>
      <form class="forms-sample" method="post">
        @Html.HiddenFor(x=>x.ImageID)
        <div class="form-group">
          <label for="exampleInputName1">Başlık</label>
          <input type="text" class="form-control" placeholder="Görsel Başlığını giriniz" asp-for="Title">
          <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="form-group">
          <label for="exampleInputEmail3">Görsel Yolu</label>
          <input type="text" class="form-control" placeholder="Görsel yolunu giriniz." asp-for="ImageUrl">
          <span asp-validation-for="ImageUrl" class="text-danger"></span>
        </div>

        <div class="form-group">
          <label for="exampleInputEmail3">Açıklama</label>
          <input type="text" class="form-control" placeholder="Görselyolu" asp-for="Description">
          <span asp-validation-for="Description" class="text-danger"></span>
        </div>


        <button type="submit" class="btn btn-primary me-2">Kaydet</button>
      </form>
    </div>
  </div>
</div>

